{
  "SessionStart": [
    {
      "hooks": [
        {
          "type": "command",
          "command": "echo 'hooksが実行されました'"
        }
      ]
    }
  ],
  "PostToolUse": [
    {
      "matcher": "Write|Edit",
      "hooks": [
        {
          "type": "command",
          "command": "${CLAUDE_PLUGIN_ROOT}/scripts/lint.sh"
        }
      ]
    }
  ]
}
