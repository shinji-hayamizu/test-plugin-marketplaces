{
  "UserPromptSubmit": [
    {
      "hooks": [
        {
          "type": "command",
          "command": "echo '[HOOK TEST] UserPromptSubmit が発火しました！ 時刻: '$(date '+%H:%M:%S')"
        }
      ]
    }
  ],
  "PostToolUse": [
    {
      "matcher": ".*",
      "hooks": [
        {
          "type": "command",
          "command": "echo '[HOOK TEST] PostToolUse が発火しました！ ツール: '$CLAUDE_TOOL_NAME"
        }
      ]
    }
  ],
  "SessionStart": [
    {
      "hooks": [
        {
          "type": "command",
          "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/reload-context.sh"
        }
      ]
    }
  ] 
}
