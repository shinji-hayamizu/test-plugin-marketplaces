{
  "UserPromptSubmit": [
    {
      "hooks": [
        {
          "type": "command",
          "command": "echo '[HOOK TEST] UserPromptSubmit が発火しました！ 時刻: '$(date '+%H:%M:%S')"
        }
      ]
    }
  ],
  "PostToolUse": [
    {
      "matcher": ".*",
      "hooks": [
        {
          "type": "command",
          "command": "echo '[HOOK TEST] PostToolUse が発火しました！ ツール: '$CLAUDE_TOOL_NAME"
        }
      ]
    }
  ],
  "SessionStart": [
      {
        "matcher": "clear|compact",
        "hooks": [
          {
            "type": "command",
            "command": "bash $(git rev-parse --show-toplevel)/.claude/hooks/reload-context.sh"
          }
        ]
      }
    ] 
}
