{
  "name": "code-standards",
  "version": "1.0.1",
  "description": "共通コーディング規約",
  "commands": "./commands/",
  "mcpServers": {
    "filesystem": {
      "command": "${CLAUDE_PLUGIN_ROOT}/npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "${CLAUDE_PLUGIN_ROOT}"
      ]
    },
    "memory": {
      "command": "${CLAUDE_PLUGIN_ROOT}/npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ]
    }
  },
  "agents": [
    "./agents/security-reviewer.md",
    "./agents/code-reviewer.md",
    "./agents/invocation-tester.md"
  ],
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Hero.aiff"
          }
        ]
      }
    ]
  }
}

